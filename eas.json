{
    "cli": {
        "version": ">= 5.0.0",
        "appVersionSource": "remote"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "env": {
                "APP_ENV": "development",
                "API_URL": "http://localhost:3000",
                "PLAID_CLIENT_ID": "PLAID_CLIENT_ID",
                "PLAID_SECRET": "PLAID_SECRET"
            },
            "ios": {
                "simulator": true
            },
            "android": {
                "buildType": "apk"
            }
        },
        "preview": {
            "distribution": "internal",
            "env": {
                "APP_ENV": "preview",
                "API_URL": "http://localhost:3000",
                "PLAID_CLIENT_ID": "PLAID_CLIENT_ID",
                "PLAID_SECRET": "PLAID_SECRET"
            },
            "android": {
                "buildType": "apk"
            },
            "ios": {
                "buildConfiguration": "Release"
            }
        },
        "production": {
            "env": {
                "APP_ENV": "production",
                "API_URL": "https://api.cardreignlabs.com",
                "PLAID_CLIENT_ID": "PLAID_CLIENT_ID",
                "PLAID_SECRET": "PLAID_SECRET"
            },
            "android": {
                "buildType": "app-bundle"
            },
            "ios": {
                "buildConfiguration": "Release"
            },
            "autoIncrement": true
        }
    },
    "submit": {
        "production": {}
    }
}